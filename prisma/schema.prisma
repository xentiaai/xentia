generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  name      String?
  role      String  @default("client")
  createdAt DateTime @default(now())
}

model Agent {
  id          String  @id @default(cuid())
  name        String
  ownerId     String
  description String?
  settings    String?  // json
  createdAt   DateTime @default(now())
}

model Conversation {
  id        String   @id @default(cuid())
  agentId   String
  messages  String   // JSON
  createdAt DateTime @default(now())
}
